<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <filter>
        <filter-name>appstats</filter-name>
        <filter-class>com.google.appengine.tools.appstats.AppstatsFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>appstats</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
	<filter>
		<filter-name>jsondb</filter-name>
		<filter-class>com.campsynergy2.JSONDBFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>jsondb</filter-name>
		<url-pattern>/jsondb/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>jsondb</filter-name>
		<url-pattern>/manage/*</url-pattern>
	</filter-mapping>
  

    
	<servlet>
		<servlet-name>appservlet</servlet-name>
		<servlet-class>
			com.campsynergy2.CSScalatraServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>appservlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<security-constraint>
        <web-resource-collection>
        	<web-resource-name>Management</web-resource-name>
            <url-pattern>/manage/*</url-pattern>
            <url-pattern>/jsondb/*</url-pattern>
            <url-pattern>/manageapp/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
        	<web-resource-name>All</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/jsondb/consolidate</url-pattern>
            <url-pattern>/jsondb/internalt</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    
    <servlet>
        <servlet-name>appstats</servlet-name>
        <servlet-class>com.google.appengine.tools.appstats.AppstatsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>appstats</servlet-name>
        <url-pattern>/appstats/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/appstats/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>